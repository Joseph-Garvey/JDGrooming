<Window x:Class="JDGrooming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JDGrooming"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080" Background="#121212">
    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames AccelerationRatio="0.45" DecelerationRatio="0.45" Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="100"></EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames AccelerationRatio="0.45" DecelerationRatio="0.45" Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="100"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
    </Window.Triggers>
    <!-- Make resize later but dockpanel works -->
    <DockPanel>
        <!-- TitleBar goes here -->
        <Grid Name="GridMenu" Width="100" Background="#FF282828" DockPanel.Dock="Left">
            <StackPanel>
                <Button Name="BtnOpenMenu" Margin="20" Click="BtnOpenMenu_Click">Expand</Button>
                <Button Name="BtnCloseMenu" Margin="20" Visibility="Collapsed" Click="BtnCloseMenu_Click">Collapse</Button>
                <Button  Margin="10" Width="50" Click="Button_Click">None</Button>
                <Button  Margin="10" Width="50"  Click="Button_Click">Window</Button>
                <Button Margin="10" Width="50"  Click="Button_Click">UserControl</Button>
                <Button  Margin="10" Width="50"  Click="Button_Click">Example</Button>
                <Button  Margin="10"  Click="Button_Click">Settings</Button>
            </StackPanel>
        </Grid>
        <Viewbox Name="View">
            <local:DogRegistration></local:DogRegistration>
        </Viewbox>
    </DockPanel>
    <!--
    <Viewbox Stretch="UniformToFill">

    </Viewbox>
    -->
</Window>
