<UserControl x:Class="JDGrooming._2FA_Test"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JDGrooming"
             mc:Ignorable="d"
             >
    <StackPanel>
        <Button Click="Button_Click">Send Email Async</Button>
        <Label Style="{StaticResource lbl_WhiteHeading}">Auth Code</Label>
        <Label Style="{StaticResource lbl_WhiteHeading}" Content="{Binding AuthCode, UpdateSourceTrigger=PropertyChanged}"></Label>
    </StackPanel>
</UserControl>
