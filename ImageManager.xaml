<UserControl x:Class="JDGrooming.ImageManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JDGrooming"
             mc:Ignorable="d"
            >
    <Border Margin="5" Style="{StaticResource brd_1}">
        <DockPanel VerticalAlignment="Center" Height="97" Width="92">
            <Border Style="{StaticResource brd_1}" DockPanel.Dock="Top">
                <Image Source="{Binding Image, FallbackValue='pack://siteoforigin:,,,/Icons/add_image.png'}" MaxHeight="68" MaxWidth="80"></Image>
            </Border>
            <Button Style="{StaticResource btnDark}" FontSize="6" VerticalAlignment="Bottom" Margin="5,0,5,5" Click="btn_UploadImage" DockPanel.Dock="Bottom">Upload new image</Button>
        </DockPanel>
    </Border>
</UserControl>
