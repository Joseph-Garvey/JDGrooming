<UserControl x:Class="JDGrooming.Search_DataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JDGrooming"
             mc:Ignorable="d" MaxHeight="355"
             >
    <StackPanel>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource lbl_WhiteHeading}" FontSize="18">Search:</Label>
            <TextBox Grid.Column="1" FontSize="18"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <DataGrid Name="dataview" Margin="5,0,5,10" BorderBrush="Black"
                          ItemsSource="{Binding DataList}"
                          IsReadOnly="True" SelectionMode="Single"
                   AutoGenerateColumns="True" Grid.ColumnSpan="2" Grid.Row="1"/>
        </Grid>
        <!-- fix appearance later -->
    </StackPanel>
</UserControl>
